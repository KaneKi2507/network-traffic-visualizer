ScreenManager:
    MainScreen:
    AppGraphScreen:
    AppInfoScreen:


<MainScreen@Screen>:
    name: "main"

    BoxLayout:
        orientation: "vertical"

        TrafficGraph:
            id: traffic_graph
            size_hint_y: 0.45

        ScrollView:
            AppDashboard:
                id: app_dashboard
                size_hint_y: None
                height: self.minimum_height


<AppGraphScreen@Screen>:
    name: "app_graph"

    BoxLayout:
        orientation: "vertical"

        Button:
            text: "← Back"
            size_hint_y: None
            height: "42dp"
            on_release: app.go_back()

        TrafficGraph:
            id: app_graph
            size_hint_y: 1


<AppInfoScreen@Screen>:
    name: "app_info"

    BoxLayout:
        orientation: "vertical"
        padding: "12dp"
        spacing: "8dp"

        Button:
            text: "← Back"
            size_hint_y: None
            height: "42dp"
            on_release: app.go_back()

        Label:
            id: info_label
            text: ""
            halign: "left"
            valign: "top"
            markup: True
            text_size: self.width, None
